<% provide :title, t("users.edit") %>
<% provide :action_path, user_path(@user) %>
<% provide :button_text, t("users.save_change") %>
<h1><%= t "users.update" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("change_avatar"), "http://gravatar.com/emails",
        {target: "_blank", rel: "noopener"} %>
    </div>
  </div>
</div>
