<li>
  <%= gravatar_for user,
    size: Settings.user_model.img_index_size %>
  <%= link_to user.name, user %>
  <% if current_user.is_admin? && !user.is_user?(current_user) %>
    | <%= link_to t("users.delete"), user, method: :delete,
      data: {confirm: t("users.confirm_delete")} %>
  <% end %>
</li>
