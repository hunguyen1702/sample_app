<%# javascript_include_tag "validate_img" %>
<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content,
      placeholder: t("microposts.placeholder") %>
  </div>
  <%= f.submit t("microposts.post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture,
      accept: Settings.micropost_model.img_accept_type %>
  </span>
<% end %>
