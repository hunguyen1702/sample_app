<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user,
    size: Settings.user_model.img_index_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "microposts.posted_time",
      {time: time_ago_in_words(micropost.created_at)} %>
    <% if micropost.user.is_user? current_user %>
      <%= link_to t("microposts.delete"), micropost,
        method: :delete, data: {confirm: t("microposts.confirm")} %>
    <% end %>
  </span>
</li>
