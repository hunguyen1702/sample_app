<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= content_tag :h3, t("home.feed") %>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "home.welcome" %></h1>
    <h2>
      <%= t("home.content", {
        url_rails_tutorial: link_to(t("home.rails_tutorial"),
          "http://www.railstutorial.org/")
      }).html_safe %>
    </h2>
    <% unless logged_in? %>
      <%= link_to t("home.sign_up"),
        signup_path, class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>

  <%= link_to image_tag("rails.png", alt: t("home.img_alt")),
    "http://rubyonrails.org/" %>
<% end %>
